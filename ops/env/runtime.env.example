APP_ENV=local              # local|prod
LOG_LEVEL=INFO

# ---- Auth ----
JWT_SECRET=change-me
JWT_EXPIRES_MINUTES=60

# ---- Postgres (BE가 사용) ----
POSTGRES_DB=mafia_like
